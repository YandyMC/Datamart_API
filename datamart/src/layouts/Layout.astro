---
const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<link rel="icon" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
		<link rel="stylesheet" href="//cdn.datatables.net/2.0.8/css/dataTables.dataTables.min.css" />
	</head>
	<body class="min-h-dvh">
		<script is:inline src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
		<script is:inline src="//cdn.datatables.net/2.0.8/js/dataTables.min.js"></script>
		<script
			is:inline
			src="https://cdnjs.cloudflare.com/ajax/libs/powerbi-client/2.23.1/powerbi.min.js"></script>
		<slot />
	</body>
</html>
